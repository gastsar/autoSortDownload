{
  "manifest_version": 3,
  "name": "TriAuto des Téléchargements",
  "version": "1.0",
  "description": "Classe automatiquement les fichiers téléchargés par type",
  "permissions": [
    "downloads"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "file://*/*"
  ],
  "action": {
    "default_icon": "icon.png"
  }
}